module net.tommay.spudoku.Solution where

import net.tommay.spudoku.Puzzle (Puzzle)
import net.tommay.spudoku.Stats (Stats)
import net.tommay.spudoku.Step (Step)

abstract data Solution = Solution {
  puzzle :: Puzzle,
  steps :: [Step],
  stats :: Stats
}

new :: Puzzle -> [Step] -> Stats -> Solution
new puzzle steps stats =
  Solution.Solution { puzzle = puzzle, steps = steps, stats = stats }
